{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "skipLibCheck": true,

    /* Bundler mode */
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["vitest/globals", "vite/client", "vitest/jsdom"]
  },
  "include": ["vite.config.ts"]
}
