{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*", "**/.env.*local"],
  "globalEnv": ["PORT", "NODE_ENV", "API_URL", "PORT", "DATABASE_URL", "JWT_PRIVATE_KEY", "JWT_PUBLIC_KEY"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "cache": false,
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "lint": {},
    "test": {},
    "seed": {}
  }
}
